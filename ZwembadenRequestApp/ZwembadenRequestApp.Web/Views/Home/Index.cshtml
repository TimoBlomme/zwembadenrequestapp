@{
    ViewBag.Title = "Home Pagina";
}

@functions {
    public string GetStatusDisplayName(string status)
    {
        switch (status)
        {
            case "New":
                return "Nieuw";
            case "In Progress":
                return "In Behandeling";
            case "Done":
                return "Voltooid";
            default:
                return status;
        }
    }
}

<div class="container-fluid hero-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="hero-content">
                    <h1 class="hero-title">
                        <i class="fas fa-swimming-pool" style="margin-right: 15px;"></i>
                        Zwembaden Request App
                    </h1>
                    <p class="hero-subtitle">Uw partner voor professionele zwembadaanvragen</p>

                    @if (!Request.IsAuthenticated)
                    {
                        <div class="hero-actions">
                            @Html.ActionLink("Account Aanmaken", "Register", "Account", null, new
                            {
                                @class = "btn btn-success btn-hero",
                                style = "margin-right: 15px;"
                            })
                            @Html.ActionLink("Inloggen", "Login", "Account", null, new
                            {
                                @class = "btn btn-outline-light btn-hero"
                            })
                        </div>
                    }
                    else
                    {
                        <div class="welcome-user">
                            <h2 class="welcome-message">
                                Welkom terug, <span class="user-name">@User.Identity.Name</span>!
                            </h2>
                            <p class="welcome-subtitle">Klaar om uw volgende project te starten?</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (!Request.IsAuthenticated)
{
    <!-- Features Section for Non-Authenticated Users -->
    <div class="container features-section">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="section-title">Waarom Kiezen Voor Ons?</h2>
                <p class="section-subtitle">Ontdek de voordelen van ons platform</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-bolt"></i>
                    </div>
                    <h3>Snel & Eenvoudig</h3>
                    <p>Vraag binnen enkele minuten een offerte aan zonder gedoe. Ons systeem begeleidt u stap voor stap.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3>Veilig & Betrouwbaar</h3>
                    <p>Uw gegevens worden versleuteld en veilig opgeslagen. Wij gaan zorgvuldig om met uw privacy.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-history"></i>
                    </div>
                    <h3>Altijd Bereikbaar</h3>
                    <p>Bekijk en beheer uw aanvragen 24/7. Altijd inzicht in de status van uw offerte.</p>
                </div>
            </div>
        </div>

        <!-- How It Works Section -->
        <div class="row how-it-works">
            <div class="col-md-12 text-center">
                <h2 class="section-title">Hoe Werkt Het?</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="step-card">
                    <div class="step-number">1</div>
                    <h4>Account Aanmaken</h4>
                    <p>Registreer in minder dan 2 minuten met uw e-mailadres.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="step-card">
                    <div class="step-number">2</div>
                    <h4>Offerte Aanvragen</h4>
                    <p>Vul het eenvoudige formulier in met uw wensen en specificaties.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="step-card">
                    <div class="step-number">3</div>
                    <h4>Beoordeling</h4>
                    <p>Onze experts beoordelen uw aanvraag en berekenen de kosten.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="step-card">
                    <div class="step-number">4</div>
                    <h4>Offerte Ontvangen</h4>
                    <p>Ontvang uw gedetailleerde offerte direct in uw account.</p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Quick Actions Section for Authenticated Users -->
<div class="container quick-actions-section">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="section-title">Snelle Acties</h2>
            <p class="section-subtitle">Wat wilt u vandaag doen?</p>
        </div>
    </div>
    <div class="row">
        @if (User.IsInRole("Customer"))
        {
            <div class="col-md-6">
                <div class="action-card primary-action" style="margin-top: 0px">
                    <div class="action-icon">
                        <i class="fas fa-file-alt"></i>
                    </div>
                    <div class="action-content">
                        <h3>Nieuwe Offerte Aanvragen</h3>
                        <p>Start een nieuwe aanvraag voor uw zwembadproject. Vul het formulier in en ontvang binnen 48 uur een offerte.</p>
                        @Html.ActionLink("Start Aanvraag", "Create", "Quote", null, new
                        {
                            @class = "btn btn-primary btn-action"
                        })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="action-card secondary-action" style="margin-top: 0px">
                    <div class="action-icon">
                        <i class="fas fa-list"></i>
                    </div>
                    <div class="action-content">
                        <h3>Mijn Aanvragen Bekijken</h3>
                        <p>Bekijk de status van uw bestaande offerte-aanvragen en beheer uw projecten.</p>
                        @Html.ActionLink("Bekijk Aanvragen", "Index", "Quote", null, new
                        {
                            @class = "btn btn-info btn-action"
                        })
                    </div>
                </div>
            </div>
        }

        <div class="col-md-6">
            <div class="action-card profile-action">
                <div class="action-icon">
                    <i class="fas fa-user"></i>
                </div>
                <div class="action-content">
                    <h3>Mijn Profiel</h3>
                    <p>Bekijk en beheer uw accountgegevens, wachtwoord en persoonlijke informatie.</p>
                    @Html.ActionLink("Naar Profiel", "Profile", "Account", null, new
                    {
                        @class = "btn btn-warning btn-action"
                    })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="action-card settings-action">
                <div class="action-icon">
                    <i class="fas fa-cogs"></i>
                </div>
                <div class="action-content">
                    <h3>Account Instellingen</h3>
                    <p>Beheer uw accountvoorkeuren, beveiligingsinstellingen en notificaties.</p>
                    @Html.ActionLink("Instellingen", "Index", "Manage", null, new
                    {
                        @class = "btn btn-secondary btn-action"
                    })
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="row recent-activity">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <i class="fas fa-clock" style="margin-right: 10px;"></i>
                        @if (User.IsInRole("Admin"))
                        {
                            <text>Openstaande Offertes Beheer</text>
                        }
                        else
                        {
                            <text>Recente Activiteit</text>
                        }
                    </h3>
                </div>
                <div class="panel-body">
                    @if (User.IsInRole("Customer"))
                    {
                        if (ViewBag.PendingQuotes != null && ViewBag.PendingQuotes.Count > 0)
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Datum</th>
                                            <th>Type Zwembad</th>
                                            <th>Afmetingen</th>
                                            <th>Status</th>
                                            <th>Acties</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var quote in ViewBag.PendingQuotes)
                                        {
                                            <tr>
                                                <td>@quote.RequestDate.ToString("dd/MM/yyyy")</td>
                                                <td>@quote.PoolType</td>
                                                <td>@quote.Length x @quote.Width x @quote.Depth m</td>
                                                <td>
                                                    <span class="status-badge status-@quote.Status.ToLower().Replace(" ", "")">
                                                        @GetStatusDisplayName(quote.Status)
                                                    </span>
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Bekijken", "Details", "Quote", new { id = quote.Id }, new { @class = "btn btn-xs btn-info" })
                                                    @if (quote.Status == "New")
                                                    {
                                                        @Html.ActionLink("Wijzigen", "Edit", "Quote", new { id = quote.Id }, new { @class = "btn btn-xs btn-warning" })
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center">
                                <p class="text-muted">U heeft geen openstaande offerte aanvragen.</p>
                                <p>Start met het aanvragen van een offerte om uw activiteit hier te zien.</p>
                                @Html.ActionLink("Offerte Aanvragen", "Create", "Quote", null, new { @class = "btn btn-primary" })
                            </div>
                        }
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <div class="admin-quotes-overview">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="quote-group">
                                        <h4 class="group-title">
                                            <i class="fas fa-euro-sign text-warning"></i>
                                            Offertes Zonder Offerte (@ViewBag.QuotesWithoutOffer.Count)
                                        </h4>
                                        @if (ViewBag.QuotesWithoutOffer != null && ViewBag.QuotesWithoutOffer.Count > 0)
                                        {
                                            <div class="quote-list">
                                                @foreach (var quote in ViewBag.QuotesWithoutOffer)
                                                {
                                                    <div class="quote-item">
                                                        <div class="quote-header">
                                                            <strong>@quote.CustomerName</strong>
                                                            <span class="quote-date">@quote.RequestDate.ToString("dd/MM/yyyy")</span>
                                                        </div>
                                                        <div class="quote-details">
                                                            <span class="pool-type">@quote.PoolType</span>
                                                            <span class="quote-dimensions">@quote.Length x @quote.Width x @quote.Depth m</span>
                                                        </div>
                                                        <div class="quote-status">
                                                            <span class="status-badge status-@quote.Status.ToLower().Replace(" ", "")">
                                                                @GetStatusDisplayName(quote.Status)
                                                            </span>
                                                        </div>
                                                        <div class="quote-actions">
                                                            @Html.ActionLink("Beheren", "Edit", "Admin", new { id = quote.Id }, new { @class = "btn btn-xs btn-primary" })
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <p class="text-muted">Geen offertes zonder offerte.</p>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="quote-group">
                                        <h4 class="group-title">
                                            <i class="fas fa-file-invoice-dollar text-success"></i>
                                            Offertes Met Offerte (@ViewBag.QuotesWithOffer.Count)
                                        </h4>
                                        @if (ViewBag.QuotesWithOffer != null && ViewBag.QuotesWithOffer.Count > 0)
                                        {
                                            <div class="quote-list">
                                                @foreach (var quote in ViewBag.QuotesWithOffer)
                                                {
                                                    <div class="quote-item">
                                                        <div class="quote-header">
                                                            <strong>@quote.CustomerName</strong>
                                                            <span class="quote-date">@quote.RequestDate.ToString("dd/MM/yyyy")</span>
                                                        </div>
                                                        <div class="quote-details">
                                                            <span class="pool-type">@quote.PoolType</span>
                                                            <span class="quote-price">€@quote.ProposedPrice</span>
                                                        </div>
                                                        <div class="quote-status">
                                                            <span class="status-badge status-@quote.Status.ToLower().Replace(" ", "")">
                                                                @GetStatusDisplayName(quote.Status)
                                                            </span>
                                                        </div>
                                                        <div class="quote-actions">
                                                            @Html.ActionLink("Beheren", "Edit", "Admin", new { id = quote.Id }, new { @class = "btn btn-xs btn-primary" })
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <p class="text-muted">Geen offertes met offerte.</p>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="text-center" style="margin-top: 30px;">
                                @Html.ActionLink("Alle Offertes Beheren", "Index", "Admin", null, new { @class = "btn btn-success btn-lg" })
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center">
                            <p class="text-muted">U heeft nog geen recente activiteit.</p>
                            <p>Start met het aanvragen van een offerte om uw activiteit hier te zien.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
}

<!-- Statistics Section -->
<div class="container-fluid stats-section">
    <div class="container">
        <div class="row">
            <div class="col-md-3 text-center">
                <div class="stat-item">
                    <h3 class="stat-number">500+</h3>
                    <p class="stat-label">Tevreden Klanten</p>
                </div>
            </div>
            <div class="col-md-3 text-center">
                <div class="stat-item">
                    <h3 class="stat-number">1200+</h3>
                    <p class="stat-label">Offertes Verwerkt</p>
                </div>
            </div>
            <div class="col-md-3 text-center">
                <div class="stat-item">
                    <h3 class="stat-number">48h</h3>
                    <p class="stat-label">Gemiddelde Reactietijd</p>
                </div>
            </div>
            <div class="col-md-3 text-center">
                <div class="stat-item">
                    <h3 class="stat-number">99%</h3>
                    <p class="stat-label">Klanttevredenheid</p>
                </div>
            </div>
        </div>
    </div>
</div>

