@model ZwembadenRequestApp.Core.Entities.QuoteRequest
@{
    ViewBag.Title = "Offerte Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        <i class="fas fa-info-circle fa-lg" style="margin-right: 10px;"></i>
                        @ViewBag.Title
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Configuratie Details</h4>
                            <dl class="dl-horizontal">
                                <dt>Type Zwembad:</dt>
                                <dd>@Model.PoolType</dd>

                                <dt>Afmetingen:</dt>
                                <dd>@Model.Length m × @Model.Width m × @Model.Depth m</dd>

                                <dt>Aantal Spots:</dt>
                                <dd>@Model.NumberOfLights</dd>

                                <dt>Trap:</dt>
                                <dd>@(Model.HasStairs ? "Ja" : "Nee")</dd>

                                @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                                {
                                    <dt>Opmerkingen:</dt>
                                    <dd>@Model.AdditionalNotes</dd>
                                }
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h4>Status Informatie</h4>
                            <dl class="dl-horizontal">
                                <dt>Status:</dt>
                                <dd>
                                    @if (Model.Status == "New")
                                    {
                                        <span class="badge badge-primary">Nieuw</span>
                                    }
                                    else if (Model.Status == "In Progress")
                                    {
                                        <span class="badge badge-warning">In Behandeling</span>
                                    }
                                    else if (Model.Status == "Done")
                                    {
                                        <span class="badge badge-success">Afgerond</span>
                                    }
                                </dd>

                                <dt>Aanvraag Datum:</dt>
                                <dd>@Model.RequestDate.ToString("dd/MM/yyyy HH:mm")</dd>

                                @if (Model.ResponseDate.HasValue)
                                {
                                    <dt>Reactie Datum:</dt>
                                    <dd>@Model.ResponseDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                                }

                                @if (Model.ProposedPrice.HasValue)
                                {
                                    <dt>Voorgestelde Prijs:</dt>
                                    <dd class="text-success" style="font-size: 1.2em; font-weight: bold;">
                                        € @Model.ProposedPrice.Value.ToString("N2")
                                    </dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.AdminNotes))
                                {
                                    <dt>Admin Opmerkingen:</dt>
                                    <dd>@Model.AdminNotes</dd>
                                }
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="panel-footer text-center">
                    <div class="btn-group" role="group">
                        @Html.ActionLink("← Terug naar overzicht", "Index", "Quote", null, new { @class = "btn btn-default" })

                        @if (Model.Status == "New")
                        {
                            @Html.ActionLink("Bewerken", "Edit", "Quote", new { id = Model.Id }, new { @class = "btn btn-warning" })
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .panel-info .panel-heading {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%) !important;
        color: white;
    }

    .dl-horizontal dt {
        text-align: left;
        width: 160px;
        margin-bottom: 5px;
    }

    .dl-horizontal dd {
        margin-left: 180px;
        margin-bottom: 5px;
    }

    .badge-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .badge-warning {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .badge-success {
        background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
    }
</style>