@using ZwembadenRequestApp.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Inloggen";
}

<div class="container">
    <div class="row">
        <div class="col-md-5 col-md-offset-1">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        <i class="fas fa-sign-in-alt fa-lg" style="margin-right: 10px;"></i>
                        @ViewBag.Title
                    </h3>
                </div>
                <div class="panel-body">
                    <p class="text-muted text-center" style="margin-bottom: 25px;">
                        Log in met uw accountgegevens
                    </p>

                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "alert alert-warning", role = "alert" })

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                @Html.TextBoxFor(m => m.Email, new
                                {
                                    @class = "form-control",
                                    placeholder = "E-mailadres"
                                })
                            </div>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fas fa-lock"></i>
                                </span>
                                @Html.PasswordFor(m => m.Password, new
                                {
                                    @class = "form-control",
                                    placeholder = "Wachtwoord"
                                })
                            </div>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="checkbox" style="margin-left: 5px;">
                                <label style="font-weight: normal;">
                                    @Html.CheckBoxFor(m => m.RememberMe, new { style = "margin-right: 8px; transform: scale(1.2);" })
                                    Onthoud mij
                                </label>
                            </div>
                        </div>

                        <div class="form-group" style="margin-top: 30px;">
                            <button type="submit" class="btn btn-primary btn-block btn-lg">
                                <i class="fas fa-sign-in-alt" style="margin-right: 8px;"></i>
                                Inloggen
                            </button>
                        </div>

                        <div class="text-center" style="margin-top: 20px;">
                            <small>
                                @Html.ActionLink("Wachtwoord vergeten?", "ForgotPassword", null, new { @class = "text-muted" })
                            </small>
                        </div>
                    }
                </div>
                <div class="panel-footer text-center">
                    <p class="text-muted" style="margin: 0;">
                        Nog geen account?
                        @Html.ActionLink("Registreer hier", "Register", null, new { @class = "text-primary", style = "font-weight: 600;" })
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        <i class="fas fa-rocket fa-lg" style="margin-right: 10px;"></i>
                        Snel Starten
                    </h3>
                </div>
                <div class="panel-body text-center" style="padding: 40px 30px;">
                    <div class="feature-item" style="margin-bottom: 30px;">
                        <i class="fas fa-bolt fa-2x text-warning" style="margin-bottom: 15px;"></i>
                        <h4 style="color: #333;">Snelle Offertes</h4>
                        <p class="text-muted">Vraag binnen enkele minuten een offerte aan voor uw zwembad.</p>
                    </div>

                    <div class="feature-item" style="margin-bottom: 30px;">
                        <i class="fas fa-history fa-2x text-info" style="margin-bottom: 15px;"></i>
                        <h4 style="color: #333;">Eenvoudig Beheer</h4>
                        <p class="text-muted">Bekijk en beheer al uw offerte-aanvragen op één plek.</p>
                    </div>

                    <div class="feature-item">
                        <i class="fas fa-shield-alt fa-2x text-success" style="margin-bottom: 15px;"></i>
                        <h4 style="color: #333;">Veilig & Betrouwbaar</h4>
                        <p class="text-muted">Uw gegevens worden veilig opgeslagen en verwerkt.</p>
                    </div>

                    <hr style="margin: 30px 0;" />

                    <!-- External Logins Section -->
                    <div id="socialLoginForm">
                        @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .panel {
        margin-top: 50px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border: none;
        border-radius: 12px;
    }

    .panel-primary .panel-heading {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border-radius: 12px 12px 0 0 !important;
        padding: 25px;
    }

    .panel-info .panel-heading {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%) !important;
        border-radius: 12px 12px 0 0 !important;
        padding: 25px;
    }

    .panel-title {
        font-weight: 600;
        color: white;
        font-size: 1.3em;
    }

    .panel-body {
        padding: 30px;
    }

    .input-group-addon {
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
        border-right: none;
        min-width: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-control {
        border-left: none;
        padding: 12px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 15px;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
        border-radius: 25px;
        font-size: 1.1em;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .input-group {
        margin-bottom: 20px;
    }

    .alert-warning {
        border-radius: 8px;
        border: none;
        background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
        color: #856404;
        font-weight: 500;
    }

    .feature-item {
        padding: 0 10px;
    }

        .feature-item h4 {
            margin-bottom: 10px;
            font-weight: 600;
        }

    .text-primary {
        color: #667eea !important;
        font-weight: 600;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}