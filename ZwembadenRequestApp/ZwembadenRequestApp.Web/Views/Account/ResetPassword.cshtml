@model ZwembadenRequestApp.Web.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Wachtwoord Resetten";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        <i class="fas fa-key fa-lg" style="margin-right: 10px;"></i>
                        @ViewBag.Title
                    </h3>
                </div>
                <div class="panel-body">
                    <p class="text-muted text-center" style="margin-bottom: 25px;">
                        Voer uw e-mailadres en nieuw wachtwoord in.
                    </p>

                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Code)

                        @Html.ValidationSummary("", new { @class = "alert alert-danger", role = "alert" })

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                @Html.TextBoxFor(m => m.Email, new
                                {
                                    @class = "form-control",
                                    placeholder = "Uw e-mailadres"
                                })
                            </div>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fas fa-lock"></i>
                                </span>
                                @Html.PasswordFor(m => m.Password, new
                                {
                                    @class = "form-control",
                                    placeholder = "Nieuw wachtwoord"
                                })
                            </div>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fas fa-lock"></i>
                                </span>
                                @Html.PasswordFor(m => m.ConfirmPassword, new
                                {
                                    @class = "form-control",
                                    placeholder = "Bevestig wachtwoord"
                                })
                            </div>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block btn-lg">
                                <i class="fas fa-sync-alt" style="margin-right: 8px;"></i>
                                Wachtwoord Resetten
                            </button>
                        </div>
                    }
                </div>
                <div class="panel-footer text-center">
                    <small class="text-muted">
                        @Html.ActionLink("Terug naar inloggen", "Login", null, new { @class = "text-primary" })
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .panel {
        margin-top: 50px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border: none;
        border-radius: 8px;
    }

    .panel-heading {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border-radius: 8px 8px 0 0 !important;
        padding: 20px;
    }

    .panel-title {
        font-weight: 600;
        color: white;
        font-size: 1.4em;
    }

    .panel-body {
        padding: 30px;
    }

    .input-group-addon {
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
        border-right: none;
    }

    .form-control {
        border-left: none;
        padding: 12px;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

    .input-group {
        margin-bottom: 20px;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}