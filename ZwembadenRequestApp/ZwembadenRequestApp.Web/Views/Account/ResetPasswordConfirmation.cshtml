@{
    ViewBag.Title = "Wachtwoord Successvol Gereset";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-success">
                <div class="panel-heading text-center">
                    <i class="fas fa-check-circle fa-3x" style="color: #28a745; margin-bottom: 15px;"></i>
                    <h3 class="panel-title" style="color: white; font-weight: 600;">
                        @ViewBag.Title
                    </h3>
                </div>
                <div class="panel-body text-center" style="padding: 40px;">
                    <div class="success-icon" style="margin-bottom: 25px;">
                        <i class="fas fa-lock-open fa-4x text-success"></i>
                    </div>

                    <h4 style="color: #28a745; margin-bottom: 20px;">
                        <i class="fas fa-check" style="margin-right: 10px;"></i>
                        Succes!
                    </h4>

                    <p class="lead" style="margin-bottom: 30px; color: #555;">
                        Uw wachtwoord is succesvol gewijzigd. U kunt nu inloggen met uw nieuwe wachtwoord.
                    </p>

                    <div class="text-center">
                        @Html.ActionLink("Inloggen", "Login", "Account", null, new
                        {
                            @class = "btn btn-success btn-lg",
                            style = "padding: 12px 30px; font-weight: 600;"
                        })
                    </div>
                </div>
                <div class="panel-footer text-center" style="background-color: #f8f9fa;">
                    <small class="text-muted">
                        Problemen? @Html.ActionLink("Neem contact op", "Contact", "Home", null, new { @class = "text-primary" })
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .panel {
        margin-top: 80px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        border: none;
        border-radius: 12px;
        overflow: hidden;
    }

    .panel-heading {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
        padding: 30px 20px;
        border-bottom: none;
    }

    .panel-success .panel-heading {
        color: white;
    }

    .panel-body {
        background-color: #f8f9fa;
    }

    .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        border-radius: 25px;
        padding: 12px 40px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
        }

    .success-icon {
        animation: bounce 1s ease-in-out;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-10px);
        }

        60% {
            transform: translateY(-5px);
        }
    }

    .lead {
        font-size: 1.2em;
        line-height: 1.6;
    }
</style>