@model ZwembadenRequestApp.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Registreren";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        <i class="fas fa-user-plus fa-lg" style="margin-right: 10px;"></i>
                        @ViewBag.Title
                    </h3>
                </div>
                <div class="panel-body">
                    <p class="text-muted text-center" style="margin-bottom: 25px;">
                        Maak een nieuw account aan om gebruik te maken van onze diensten.
                    </p>

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "alert alert-danger", role = "alert" })

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                @Html.TextBoxFor(m => m.Email, new
                                {
                                    @class = "form-control",
                                    placeholder = "E-mailadres"
                                })
                            </div>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fas fa-user"></i>
                                </span>
                                @Html.TextBoxFor(m => m.FirstName, new
                                {
                                    @class = "form-control",
                                    placeholder = "Voornaam"
                                })
                            </div>
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fas fa-user"></i>
                                </span>
                                @Html.TextBoxFor(m => m.LastName, new
                                {
                                    @class = "form-control",
                                    placeholder = "Achternaam"
                                })
                            </div>
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fas fa-lock"></i>
                                </span>
                                @Html.PasswordFor(m => m.Password, new
                                {
                                    @class = "form-control",
                                    placeholder = "Wachtwoord"
                                })
                            </div>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fas fa-lock"></i>
                                </span>
                                @Html.PasswordFor(m => m.ConfirmPassword, new
                                {
                                    @class = "form-control",
                                    placeholder = "Bevestig wachtwoord"
                                })
                            </div>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group" style="margin-top: 30px;">
                            <button type="submit" class="btn btn-success btn-block btn-lg">
                                <i class="fas fa-user-plus" style="margin-right: 8px;"></i>
                                Account Aanmaken
                            </button>
                        </div>
                    }
                </div>
                <div class="panel-footer text-center">
                    <p class="text-muted" style="margin: 0;">
                        Heeft u al een account?
                        @Html.ActionLink("Inloggen", "Login", null, new { @class = "text-success", style = "font-weight: 600;" })
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .panel {
        margin-top: 50px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border: none;
        border-radius: 12px;
    }

    .panel-success .panel-heading {
        background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%) !important;
        border-radius: 12px 12px 0 0 !important;
        padding: 25px;
    }

    .panel-title {
        font-weight: 600;
        color: white;
        font-size: 1.5em;
    }

    .panel-body {
        padding: 30px;
    }

    .input-group-addon {
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
        border-right: none;
        min-width: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-control {
        border-left: none;
        padding: 12px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
        }

    .btn-success {
        background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
        border: none;
        padding: 15px;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
        border-radius: 25px;
        font-size: 1.1em;
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(86, 171, 47, 0.4);
            color: white;
        }

    .input-group {
        margin-bottom: 20px;
    }

    .alert-danger {
        border-radius: 8px;
        border: none;
        background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
        color: #721c24;
        font-weight: 500;
    }

    .text-success {
        color: #56ab2f !important;
        font-weight: 600;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}