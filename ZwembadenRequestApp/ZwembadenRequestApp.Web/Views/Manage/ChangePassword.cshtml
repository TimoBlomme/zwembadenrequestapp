@model ZwembadenRequestApp.Web.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Wachtwoord Wijzigen";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        <i class="fas fa-key fa-lg" style="margin-right: 10px;"></i>
                        @ViewBag.Title
                    </h3>
                </div>
                <div class="panel-body">
                    <p class="text-muted text-center" style="margin-bottom: 25px;">
                        Voer uw huidige wachtwoord in en kies een nieuw wachtwoord.
                    </p>

                    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "alert alert-warning", role = "alert" })

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fas fa-lock"></i>
                                </span>
                                @Html.PasswordFor(m => m.OldPassword, new
                                {
                                    @class = "form-control",
                                    placeholder = "Huidig wachtwoord"
                                })
                            </div>
                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-warning" })
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fas fa-lock"></i>
                                </span>
                                @Html.PasswordFor(m => m.NewPassword, new
                                {
                                    @class = "form-control",
                                    placeholder = "Nieuw wachtwoord"
                                })
                            </div>
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-warning" })
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fas fa-lock"></i>
                                </span>
                                @Html.PasswordFor(m => m.ConfirmPassword, new
                                {
                                    @class = "form-control",
                                    placeholder = "Bevestig nieuw wachtwoord"
                                })
                            </div>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-warning" })
                        </div>

                        <div class="form-group" style="margin-top: 30px;">
                            <button type="submit" class="btn btn-warning btn-block btn-lg">
                                <i class="fas fa-sync-alt" style="margin-right: 8px;"></i>
                                Wachtwoord Wijzigen
                            </button>
                        </div>
                    }
                </div>
                <div class="panel-footer text-center">
                    <div class="row">
                        <div class="col-md-6">
                            <small>
                                @Html.ActionLink("← Terug naar Profiel", "Profile", "Account", null, new { @class = "text-muted" })
                            </small>
                        </div>
                        <div class="col-md-6">
                            <small>
                                @Html.ActionLink("Hulp nodig?", "Contact", "Home", null, new { @class = "text-warning" })
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Password Requirements Card -->
            <div class="panel panel-default" style="margin-top: 20px;">
                <div class="panel-heading">
                    <h5 class="panel-title">
                        <i class="fas fa-info-circle" style="margin-right: 8px;"></i>
                        Wachtwoord Vereisten
                    </h5>
                </div>
                <div class="panel-body">
                    <ul class="list-unstyled" style="margin-bottom: 0;">
                        <li><i class="fas fa-check text-success" style="margin-right: 8px;"></i> Minimaal 6 karakters</li>
                        <li><i class="fas fa-check text-success" style="margin-right: 8px;"></i> Bevat minstens 1 cijfer</li>
                        <li><i class="fas fa-check text-success" style="margin-right: 8px;"></i> Bevat minstens 1 hoofdletter</li>
                        <li><i class="fas fa-check text-success" style="margin-right: 8px;"></i> Bevat minstens 1 speciaal teken</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .panel {
        margin-top: 50px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border: none;
        border-radius: 8px;
    }

    .panel-warning .panel-heading {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%) !important;
        border-radius: 8px 8px 0 0 !important;
        padding: 20px;
    }

    .panel-default .panel-heading {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        color: white;
        border-radius: 8px 8px 0 0 !important;
    }

    .panel-title {
        font-weight: 600;
        color: white;
        font-size: 1.4em;
    }

    .panel-body {
        padding: 30px;
    }

    .input-group-addon {
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
        border-right: none;
        min-width: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-control {
        border-left: none;
        padding: 12px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
        }

    .btn-warning {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border: none;
        padding: 12px;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
        border-radius: 25px;
    }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(245, 87, 108, 0.4);
            color: white;
        }

    .input-group {
        margin-bottom: 20px;
    }

    .alert-warning {
        border-radius: 8px;
        border: none;
        background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
        color: #856404;
        font-weight: 500;
    }

    .list-unstyled li {
        padding: 5px 0;
        color: #555;
    }

    .panel-footer {
        background-color: #f8f9fa;
        border-top: 1px solid #e9ecef;
        padding: 15px 20px;
    }

    .text-warning {
        color: #f5576c !important;
        font-weight: 500;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            // Add real-time password validation feedback
            $('input[type="password"]').on('input', function () {
                var $this = $(this);
                var $group = $this.closest('.form-group');
                var $icon = $group.find('.input-group-addon i');

                if ($this.val().length > 0) {
                    $icon.removeClass('fa-lock').addClass('fa-lock-open');
                    $this.css('border-color', '#28a745');
                } else {
                    $icon.removeClass('fa-lock-open').addClass('fa-lock');
                    $this.css('border-color', '#ced4da');
                }
            });

            // Add focus effects
            $('.form-control').focus(function () {
                $(this).closest('.input-group').css('box-shadow', '0 0 0 0.2rem rgba(255, 193, 7, 0.25)');
            }).blur(function () {
                $(this).closest('.input-group').css('box-shadow', 'none');
            });
        });
    </script>
}