@model IEnumerable<ZwembadenRequestApp.Core.Entities.QuoteRequest>

@{
    ViewBag.Title = "Mijn Offerte Aanvragen";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Nieuwe Offerte Aanvraag", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <thead>
        <tr>
            <th>Type Zwembad</th>
            <th>Configuratie</th>
            <th>Status</th>
            <th>Voorgestelde Prijs</th>
            <th>Aanvraag Datum</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PoolType</td>
                <td>@item.Configuration</td>
                <td>
                    <span class="label label-@GetStatusClass(item.Status)">@item.Status</span>
                </td>
                <td>
                    @if (item.ProposedPrice.HasValue)
                    {
                        <text>€@item.ProposedPrice.Value.ToString("N2")</text>
                    }
                    else
                    {
                        <text>-</text>
                    }
                </td>
                <td>@item.RequestDate.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (item.ProposedPrice == null)
                    {
                        <form asp-action="Cancel" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Weet u zeker dat u deze aanvraag wilt annuleren?')">
                                Annuleren
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@functions {
    string GetStatusClass(string status)
    {
        switch (status)
        {
            case "New": return "default";
            case "In Progress": return "warning";
            case "Done": return "success";
            default: return "default";
        }
    }
}